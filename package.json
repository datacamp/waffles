{
  "name": "@datacamp/waffles",
  "version": "0.13.0",
  "description": "The DataCamp design system and components library.",
  "sideEffects": false,
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs && yarn build:package-json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:copy-files": "concurrently \"copyfiles README.md dist\" \"copyfiles package.json dist\"",
    "build:package-json": "node ./tools/add-package-json-files.js",
    "prebuild": "rimraf dist && yarn generate:design-tokens && yarn generate:icons",
    "generate:design-tokens": "rimraf src/tokens/tokens.ts && node ./tools/generate-design-tokens.js",
    "generate:icons": "rimraf \"src/icon/!(raw|icon-base.tsx|__tests__)\" && node ./tools/generate-icons.js",
    "workbench": "yarn prebuild && concurrently --kill-others -c \"bgBlue.bold,bgMagenta.bold\" \"yarn build:cjs --watch\" \"next dev workbench --port 4040\"",
    "preworkbench": "rimraf workbench/pages/stories",
    "doc:dev": "yarn prebuild && yarn build:cjs && next dev doc-site",
    "doc:build": "next build doc-site && next export doc-site -o build",
    "predoc:build": "rimraf build",
    "test:unit": "jest --watch",
    "test:unit:ci": "yarn jest --coverage --runInBand",
    "test:stories": "yarn prebuild && yarn build:cjs && start-server-and-test \"next dev workbench --port 8080\" 8080 \"cypress open\"",
    "test:stories:ci": "yarn pretest:stories && start-server-and-test \"next dev workbench --port 8080\" 8080 \"cypress run\"",
    "pretest:stories": "yarn preworkbench && node ./tools/prepare-workbench-stories.js",
    "lint": "eslint ./ --fix --cache",
    "lint:commits": "commitlint --to HEAD --verbose",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "release": "release-it --VV --ci",
    "prepare": "is-ci || husky install"
  },
  "repository": "git@github.com:datacamp/waffles.git",
  "keywords": [
    "design system",
    "react",
    "components",
    "typescript"
  ],
  "author": "DataCamp",
  "license": "MIT",
  "homepage": "https://waffles.datacamp.com",
  "engines": {
    "node": ">=14.x"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@datacamp/prettier-config": "^3.0.0",
    "@emotion/babel-plugin": "^11.3.0",
    "@emotion/jest": "^11.3.0",
    "@emotion/react": "^11.4.1",
    "@release-it/conventional-changelog": "^3.1.0",
    "@testing-library/cypress": "^8.0.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.6.0",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "axe-core": "^4.3.2",
    "concurrently": "^6.2.1",
    "copyfiles": "^2.4.1",
    "cypress": "^8.3.0",
    "cypress-axe": "^0.13.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "glob": "^7.1.7",
    "husky": "^7.0.1",
    "is-ci": "^3.0.0",
    "jest": "^27.0.6",
    "next": "^11.1.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "release-it": "^14.11.3",
    "rimraf": "^3.0.2",
    "sanitize.css": "^12.0.1",
    "start-server-and-test": "^1.13.1",
    "svgo": "^2.4.0",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "react": ">= 17.0.0 < 18",
    "react-dom": ">= 17.0.0 < 18"
  }
}
